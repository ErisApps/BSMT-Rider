<idea-plugin require-restart="true">
  <id>bsmt_rider-rider</id>
  <name>BSMT_Rider</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://project-url">Fernthedev</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Beat Saber Modding Tools, but for Rider!</p>
<p>This is going to be cursed</p>
]]>
  </description>

  <depends>com.intellij.modules.rider</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable groupId="language" instance="com.jetbrains.rider.plugins.bsmt_rider.SampleOptionsPage" id="SampleOptionsPage" />
  </extensions>

  <project-components>
    <component>
      <implementation-class>com.github.fernthedev.bsmt_rider.BeatSaberGenerator</implementation-class>
    </component>
  </project-components>

  <actions>
    <action id="SampleAction" class="com.jetbrains.rider.plugins.bsmt_rider.SampleAction"
            text="Do Something" description="Do Something Description">
    </action>
    <action
            id="BSMTRider.generateUserCsProj"
            class="com.github.fernthedev.bsmt_rider.actions.UserCSProjAction"
            text="Generate Project user.csproj"
            description="Generate a user.csproj">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>

</idea-plugin>
